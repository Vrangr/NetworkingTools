<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.himanshu.navigationdrawer.fragment.WifiLatencyFragment">

    <!--<ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:alpha="0.3"
        android:src="@drawable/ic_notifications_black_24dp" />
        -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/head"
        android:paddingTop="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:text="Enter the ip address"
            android:id="@+id/textView" />
        <LinearLayout
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/first"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:inputType="number"
                android:textAlignment="center"
                android:imeOptions="actionNext"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."/>

            <EditText
                android:id="@+id/second"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."/>
            <EditText
                android:id="@+id/third"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:inputType="number"
                android:textAlignment="center"
                android:imeOptions="actionNext"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."/>
            <EditText
                android:id="@+id/fourth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:inputType="number"
                android:textAlignment="center"
                android:imeOptions="actionDone"
                />

            <Button
                android:id="@+id/check_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="PING"
                android:inputType="number"
                android:onClick="check"
                android:layout_weight="0"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/options"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/time_out_tv"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Time Out(ms) :"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/time_out_et"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/retry_tv"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Retries Count :"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/retry_et"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:gravity="center_vertical"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <Button
                android:id="@+id/traceroute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perform Traceroute"
                android:onClick="traceroute" />

            <Button
                android:id="@+id/check_button_latency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wifi Latency"
                android:onClick="latency"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/output1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="O/P"
                android:textAlignment="center"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
